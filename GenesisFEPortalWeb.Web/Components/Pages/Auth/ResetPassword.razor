@page "/reset-password"
@layout EmptyLayout
@using GenesisFEPortalWeb.Models.Models
@using GenesisFEPortalWeb.Models.Models.Auth
@inject ApiClient ApiClient
@inject NavigationManager NavigationManager
@inject IToastService ToastService
@rendermode InteractiveServer

<div class="page-background">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="height: 100vh">
        <RadzenRow Gap="0" class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="width: 100%; max-width: 800px; overflow: hidden;">
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenCard class="rz-shadow-0 rz-border-radius-0 rz-text-align-center rz-p-12" Style="height: 100%; background: var(--rz-primary-light) no-repeat 100% 70% fixed url('data:image/svg+xml;base64,')">
                    <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H2" class="rz-color-white rz-mb-6">Nueva Contraseña</RadzenText>
                    <RadzenText TextStyle="TextStyle.H6" class="rz-color-white">Sistema de Gestión de Facturación Electrónica</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body2" class="rz-color-white">GenesisFE Portal</RadzenText>
                </RadzenCard>
            </RadzenColumn>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenCard class="rz-shadow-0 rz-border-radius-0 rz-p-12">
                    <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-mb-6">
                        Establece tu nueva contraseña
                    </RadzenText>
                    <RadzenTemplateForm Data="@model" Submit="@SubmitForm" TItem="ResetPasswordDto">
                        <RadzenStack Gap="1rem">
                            @if (resetSuccess)
                            {
                                <RadzenAlert AlertStyle="AlertStyle.Success" ShowIcon="true">
                                    Tu contraseña ha sido actualizada exitosamente.
                                </RadzenAlert>
                                <RadzenButton ButtonStyle="ButtonStyle.Primary" Click="@GoToLogin" Text="Iniciar sesión" class="rz-mt-4" />
                            }
                            else if (tokenInvalid)
                            {
                                <RadzenAlert AlertStyle="AlertStyle.Danger" ShowIcon="true">
                                    El enlace de restablecimiento es inválido o ha expirado. Por favor, solicita un nuevo enlace.
                                </RadzenAlert>
                                <RadzenButton ButtonStyle="ButtonStyle.Secondary" Click="@GoToForgotPassword" Text="Solicitar nuevo enlace" class="rz-mt-4" />
                            }
                            else
                            {
                                <RadzenFormField Text="Correo Electrónico" Variant="Variant.Filled">
                                    <RadzenTextBox @bind-Value="@model.Email" Name="Email" />
                                    <RadzenRequiredValidator Component="Email" Text="El correo electrónico es requerido" />
                                    <RadzenEmailValidator Component="Email" Text="El formato del correo no es válido" />
                                </RadzenFormField>

                                <RadzenFormField Text="Nueva Contraseña" Variant="Variant.Filled">
                                    <RadzenPassword @bind-Value="@model.Password" Name="Password" />
                                    <RadzenRequiredValidator Component="Password" Text="La contraseña es requerida" />
                                    <RadzenLengthValidator Component="Password" Min="8" Text="La contraseña debe tener al menos 8 caracteres" />
                                </RadzenFormField>

                                <RadzenFormField Text="Confirmar Contraseña" Variant="Variant.Filled">
                                    <RadzenPassword @bind-Value="@model.ConfirmPassword" Name="ConfirmPassword" />
                                    <RadzenRequiredValidator Component="ConfirmPassword" Text="La confirmación de contraseña es requerida" />
                                    <RadzenCompareValidator Component="ConfirmPassword" Value="@model.Password" Text="Las contraseñas no coinciden" />
                                </RadzenFormField>

                                <RadzenButton ButtonType="ButtonType.Submit" 
                                            Text="Guardar Nueva Contraseña" 
                                            ButtonStyle="ButtonStyle.Primary" 
                                            Shade="Shade.Darker" 
                                            Size="ButtonSize.Medium" 
                                            Style="width: 100%;" 
                                            class="rz-mt-4"
                                            Disabled="@isSubmitting" />
                            }
                        </RadzenStack>
                    </RadzenTemplateForm>
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>
    </RadzenStack>
</div>

@code {
    private ResetPasswordDto model = new();
    private bool isSubmitting = false;
    private bool resetSuccess = false;
    private bool tokenInvalid = false;

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        model.Token = query["token"] ?? string.Empty;
        model.Email = query["email"] ?? string.Empty;

        if (string.IsNullOrEmpty(model.Token) || string.IsNullOrEmpty(model.Email))
        {
            tokenInvalid = true;
            return;
        }

        // Validar el token
        try
        {
            var validationResult = await ApiClient.PostAsync<BaseResponseModel, ResetPasswordDto>(
                "/api/auth/validate-reset-token", 
                new ResetPasswordDto { Token = model.Token, Email = model.Email });

            if (!validationResult.Success)
            {
                tokenInvalid = true;
            }
        }
        catch
        {
            tokenInvalid = true;
        }
    }

    private async Task SubmitForm()
    {
        if (tokenInvalid) return;

        isSubmitting = true;
        try
        {
            var result = await ApiClient.PostAsync<BaseResponseModel, ResetPasswordDto>("/api/auth/reset-password", model);

            if (result.Success)
            {
                resetSuccess = true;
                ToastService.ShowSuccess("Contraseña actualizada correctamente");
            }
            else
            {
                ToastService.ShowError(result.ErrorMessage ?? "Error al restablecer la contraseña");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Error al procesar la solicitud");
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void GoToForgotPassword()
    {
        NavigationManager.NavigateTo("/forgot-password");
    }
}